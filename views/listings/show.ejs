<% layout("layouts/boilerplate") %>

    <body>

        <h3>
            <%= listing.title %>
        </h3>
        <ul>
            <li>
                <img src="<%= listing.image %>" alt="">
            </li>
            <li>
                <%= listing.description %>
            </li>
            <li>
                &#8377;<%= listing.price.toLocaleString("en-IN") %>
            </li>
            <li>
                <%= listing.location %>
            </li>
            <li>
                <%= listing.country %>
            </li>
        </ul>
        <br>
        <a href="/listings/<%= listing._id %>/edit">EDIT LISTING</a>
        <br>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button>DELETE LISTING</button>
        </form>


        <div>
            <hr>
            <form action="/listings/<%= listing.id %>/reviews" method="POST">

                <div>
                    <label for="rating">Rating</label>
                    <input type="range" min="1" max="5" name="review[rating]" class="form-range">
                </div>
                <div>
                    <label for="comment">Comment</label>
                    <textarea required name="review[comment]" id="" cols="30" rows="10"></textarea>
                </div>
                <button>Submit</button>

            </form>
            <hr>
            <p><b>All Reviews</b></p>
            <div class="row">
                <% for(review of listing.reviews){ %>
                    <div class="card col-5 ms-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Atul</h5>
                            <p class="card-text">
                                <%= review.comment %>
                            </p>
                            <p class="card-text">
                                <%= review.rating %> stars
                            </p>
                        </div>
                        <%}%>
                    </div>
            </div>
        </div>

    </body>
    